<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <title>@ViewBag.Title - My ASP.NET Application</title>
</head>


<body>

    <!-- *****************************Nav bar section starts here *****************************************-->
    <style>
        a {
            color: white
        }

            a:link {
                color: white
            }

            a:hover {
                color: red; text-decoration: none;
            }
    </style>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark pt-4 pb-4">

        <span class="mr-5">@Html.ActionLink("Logo Here", "Index", "Home") </span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse " id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active mr-3 ml-2">
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="nav-item mr-3 ml-2">
                    @Html.ActionLink("About", "About", "Home")
                </li>
                
                <li class="nav-item mr-3 ml-2">
                    >@Html.ActionLink("Class List", "Class_list", "Home")
                </li>
                <li class="nav-item mr-3 ml-2">
                    >@Html.ActionLink("Class Schedule", "Schedule", "Home")
                </li>

                <li class="nav-item mr-3 ml-2">
                    @Html.ActionLink("Trainers", "Trainer", "Home")
                </li>
                <li class="nav-item mr-3 ml-2">
                    @Html.ActionLink("Membership", "Membership_list", "Home")
                </li>
                <li class="nav-item mr-3 ml-2">
                    @Html.ActionLink("Contact", "Contact", "Home")
                </li>

            </ul>

            <!--********************************** Search option disabled for now ************************
                <form class="form-inline my-2 my-lg-0">
                  <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            -->

            @Html.Partial("_LoginPartial")

        </div>

    </nav>


    <!-- *****************************Nav bar section ends here *****************************************-->

    @RenderBody()


    <!--****************foter section starts here *************************************-->
    <footer style="background-image: url('/content/static/images/banner.png'); color: white;" class="container-fluid">
        <div class="container text-center pt-3 pl-3">
            <div class="row " ml-2>
                <div class="col-3">
                    <h2 class="text-warning">Stay in Touch </h2>
                    <h6>gymn@gmail.com</h6>
                    <h6>0410500223</h6>
                    <div class="d-flex justify-content-center pt-4">
                        <a href="#" class="text-dark"><i class="fa-brands fa-facebook fa-2xl mr-3 ml-3 " style="color: #ffffff;"></i></a>
                        <a href="#" class="text-dark"><i class="fa-brands fa-instagram fa-2xl mr-3 ml-3" style="color: #ffffff;"></i></a>
                        <a href="#" class="text-dark"><i class="fa-brands fa-twitter fa-2xl mr-3 ml-3" style="color: #ffffff;"></i></a>
                    </div>

                </div>
                <div class="col-3">
                    <h2 class="text-warning">Opening Hours</h2>
                    <h6><i class="fa-solid fa-xmark fa-xl mr-2" style="color: #f50a2d;"></i>Monday: Closed</h6>

                    <h6><i class="fa-solid fa-check fa-lg mr-2" style="color: green;"></i>Tue-Fri: 8am-12am</h6>

                    <h6><i class="fa-solid fa-check fa-lg mr-2" style="color: green;"></i>Sat-Sun: 7am-1am</h6>

                    <h6><i class="fa-solid fa-check fa-lg mr-2" style="color: green;"></i>Holiday: 12pm-12am</h6>

                </div>
                <div class="col-2">
                    <h1 class="text-warning">Links</h1>
                    <ul>
                        <a href="#" style="color:white;">
                        <li>Classes</li></a>
                        <a href="#" style="color:white;">
                        <li>Instructors</li></a>
                        <a href="#" style="color:white;">
                        <li>About Us</li></a>
                        <a href="#" style="color:white;">
                        <li>Schedules</li></a>
                        <a href="#" style="color:white;">
                        <li>Contact Us</li></a>

                    </ul>
                </div>
                <div class="col-4">
                    <h1 class="text-warning">Company name</h1>
                    <p>Some Fitness Center is a professional fitness training center. Commercial publishing platforms and content management systems ensure that you can show different text, different data using.</p>
                </div>
            </div>
    </footer>
    <!--****************foter section ends here *************************************-->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>