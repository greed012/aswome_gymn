    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/dashboard_layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Class Name
        </th>
        <th>
            Trainer Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
